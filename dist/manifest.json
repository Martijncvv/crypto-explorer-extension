{
	"name": "Crypto Explorer Extension",
	"description": "Chrome Extension to explorer cryptocurrencies",
	"version": "1.0.0",
	"manifest_version": 3,
	"icons": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Crypto Explorer Extension",
		"default_icon": "icon.png"
	},
	"permissions": ["storage"],

	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	]
}
