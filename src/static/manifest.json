{
	"name": "Crypto Explorer Extension",
	"description": "Chrome Extension to explorer cryptocurrencies",
	"version": "1.0.0",
	"manifest_version": 3,
	"icons": {
		"16": "images/coingecko_logo.png",
		"48": "images/coingecko_logo.png",
		"128": "images/coingecko_logo.png"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Crypto Explorer Extension",
		"default_icon": "images/coingecko_logo.png"
	},
	"permissions": ["storage", "activeTab", "scripting"],

	"background": {
		"service_worker": "background.js"
	},
	"content_security_policy": "script-src 'self' https://www.gstatic.com/charts/loader.js script-src-elem 'self' https://www.gstatic.com object-src 'self'",

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["contentScript.js"]
		}
	],
	"commands": {
		"_execute_browser_action": {
			"suggested_key": {
				"default": "Ctrl+Shift+F",
				"mac": "MacCtrl+Shift+F"
			},
			"description": "Opens CG Explorer"
		}
	}
}
